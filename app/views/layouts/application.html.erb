<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header class="navbar navbar-fixed-top navbar-inverse" >
  <div class="container">
    <nav class="nav navbar-nav navbar-left" style="font-size: 30px" >
      <span style="color: #ffffff;">Bookers</span>
    </nav>
    <nav class="nav navbar-nav navbar-right" >

           <nav>
                <ul class="nav navbar-nav" >
                    <% if user_signed_in? %>
                          <li>
                            <span aria-hidden="true"><%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home  text-muted" %></span>
                          </li>

                          <li>
                              <span aria-hidden="true"><%= link_to "Users", users_path, class: "glyphicon glyphicon-user  text-muted" %></span>
                          </li>

                          <li>
                             <span aria-hidden="true"><%= link_to "Books", books_path,class: "glyphicon glyphicon-book  text-muted" %></span>
                          </li>

                          <li>
                              <span aria-hidden="true" ><%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out  text-muted", method: :delete %></span>
                          </li>

                    <% else %>

                          <li class="">
                              <span  aria-hidden="true"><%= link_to "Home", root_path(current_user), class: "glyphicon glyphicon-home text-muted" %></span>
                          </li>

                          <li class="">
                              <span aria-hidden="true"><%= link_to "About", home_about_path, class: "glyphicon glyphicon-link text-muted" %></span>
                          </li>

                          <li class="">
                              <span aria-hidden="true"><%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit text-muted" %></span>
                          </li>

                          <li class="">
                              <span  aria-hidden="true"><%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in text-muted" %></span>
                          </li>

                      <% end %>
                </ul>
            </nav>
    </nav>
  </div>
</header>

<main>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
<div class="container">
    <%= yield %>
</div>
  </main>

  </body>
</html>
