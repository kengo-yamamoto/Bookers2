<div class="container">
<div class="row">
<div class="col-lg-3">
	<h1>User Info</h1>
	<div><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></div>

	<table class="table">
	<tbody>
	<tr></tr>
	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	</tbody>
	</table>
	<div class="row">

	</div>
	<%= link_to  edit_user_path(current_user.id), class: "btn btn-default form-control" do %>
	<span class="col-xs-12  glyphicon glyphicon-wrench" aria-hidden="true"></span>
	<% end %>

</div>
</div>
</div>






