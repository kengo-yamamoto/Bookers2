<div class="row">
<div class="col-lg-3">
<%= render 'users/list', user: @user %>
<%= render 'books/list', bookn: @bookn %>
</div>

<div class="col-lg-9">
<h1>Books</h1>
<table class="table">

<thead>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
</thead>

<tbody>
<% @books.each do |book| %>

			<tr>
				<td><%= attachment_image_tag book.user, :profile_image, :fill,35,35 %></td>

				<td> <%= link_to book_path(book.id) do %>
						<%= book.title %>
					<% end %>
				</td>

				<td><%= book.body %></td>
			</tr>

<% end %>
</tbody>

</table>

</div>
</div>
